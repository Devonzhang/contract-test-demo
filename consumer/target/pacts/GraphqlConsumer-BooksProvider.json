{
  "provider": {
    "name": "BooksProvider"
  },
  "consumer": {
    "name": "GraphqlConsumer"
  },
  "interactions": [
    {
      "description": "added book",
      "request": {
        "method": "POST",
        "path": "/books",
        "body": {
          "title": "FOLK MED ANGEST",
          "releaseYear": 2021
        }
      },
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "id": "8b0fe22b-640b-47fd-a794-edfdb429243b",
          "title": "FOLK MED ANGEST",
          "releaseYear": 2021
        },
        "matchingRules": {
          "body": {
            "$.id": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.title": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.releaseYear": {
              "matchers": [
                {
                  "match": "integer"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "add book"
        }
      ]
    },
    {
      "description": "get all books",
      "request": {
        "method": "GET",
        "path": "/books"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": [
          {
            "id": "30411681-ae72-4f39-9f6e-1b50c123b928",
            "title": "book 1",
            "releaseYear": 2020
          }
        ],
        "matchingRules": {
          "body": {
            "$": {
              "matchers": [
                {
                  "match": "type",
                  "min": 1
                }
              ],
              "combine": "AND"
            },
            "$[*].title": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$[*].releaseYear": {
              "matchers": [
                {
                  "match": "number"
                }
              ],
              "combine": "AND"
            },
            "$[*].id": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "books exist"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.1.7"
    }
  }
}
